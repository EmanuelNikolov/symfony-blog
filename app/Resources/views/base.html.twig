<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Symfony Blog{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/custom.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
</head>
<body>
    <div class="cover-container container-fluid text-center d-flex flex-column">
        {% block header %}
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="#">Symfony Blog</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Home</a>
                            </li>
                            {% if app.user %}
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" href="{{ path('create_article') }}">Create article</a>
                                </li>
                            {% endif %}
                        </ul>
                        <div class="my-2 my-lg-0">
                            {% if app.user %}
                                <a class="btn btn-outline-dark my-2 my-sm-0" href="#">Logout</a>
                            {% else %}
                                <a class="btn btn-outline-success my-2 my-sm-0"
                                   href="{{ path('security_login') }}">Log In</a>
                                <a class="btn btn-outline-success my-2 my-sm-0"
                                   href="{{ path('user_register') }}">Sign Up</a>
                            {% endif %}
                        </div>
                    </div>
                </nav>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}
        <script src="{{ asset('js/jquery-3.3.1.slim.min.js') }}"></script>
        <script src="{{ asset('js/popper.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {% endblock %}
</body>
</html>
